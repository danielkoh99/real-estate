{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "ESNext"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@real-estate/shared": ["packages/shared/src/index.ts"]
    }
  },
  "include": ["packages", "apps/frontend", "apps/backend"],
  "references": [{ "path": "packages/shared" }]
}
